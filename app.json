{
  "expo": {
    "name": "SolPing",
    "slug": "solping",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "me.isaacojo.solping",
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "googleServicesFile": "./google-services.json",
      "package": "me.isaacojo.solping"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "assets/fonts/Salmond-Light.ttf",
            "assets/fonts/Salmond-SemiBold.ttf",
            "assets/fonts/Satoshi-Black.otf",
            "assets/fonts/Satoshi-Bold.otf",
            "assets/fonts/Satoshi-Light.otf",
            "assets/fonts/Satoshi-Medium.otf",
            "assets/fonts/Satoshi-Regular.otf",
            "assets/fonts/NotoColorEmoji.ttf",
            "assets/fonts/windows.ttf"
          ]
        }
      ],

      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
        }
      ],
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIDPermission": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
        }
      ],
      "react-native-edge-to-edge",
      "@react-native-google-signin/google-signin",
      "expo-secure-store",
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "fd178647-6835-424b-8bc8-44fa20e60003"
      }
    }
  }
}
